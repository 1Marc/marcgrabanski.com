---
import { site } from "../data/siteMetaData.js";
import githubIcon from '../../public/github.svg';
import linkedinIcon from '../../public/linkedin.svg';

const xIcon = `<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`;
const instagramIcon = `<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>`;

const { author, menu } = site;
const { twitter, github, linkedin, instagram } = author;
---

<div class="hero-section">
	<div class="hero-content">
		<div class="hero-text">
			<h1 class="hero-title">
				<a href="/" class="hero-home-link">
					<span class="highlight">Marc Grabanski</span>
				</a>
				<br />
				<span class="subtitle">Developer, Entrepreneur, Health Enthusiast</span>
			</h1>
			<p class="hero-description">
				Helping developers achieve technical excellence and lead healthier lives.
			</p>
			
			<!-- Navigation Menu -->
			<nav class="hero-navigation">
				<ul class="nav-list">
					{menu.map(item => (
						<li class="nav-item">
							<a href={item.path} class="nav-link">
								{item.label}
							</a>
						</li>
					))}
				</ul>
				<div class="social-links">
					<a href={`https://x.com/${twitter}`} target="_blank" class="social-link" title="X / Twitter" rel="noopener noreferrer" aria-label="X / Twitter">
						<span class="social-icon" set:html={xIcon} />
					</a>
					<a href={`https://github.com/${github}`} target="_blank" class="social-link" title="GitHub" rel="noopener noreferrer" aria-label="GitHub">
						<img src={githubIcon.src} alt="GitHub" class="social-icon" />
					</a>
					<a href={`https://instagram.com/${instagram}`} target="_blank" class="social-link" title="Instagram" rel="noopener noreferrer" aria-label="Instagram">
						<span class="social-icon" set:html={instagramIcon} />
					</a>
					<a href={`https://linkedin.com/in/${linkedin}`} target="_blank" class="social-link" title="LinkedIn" rel="noopener noreferrer" aria-label="LinkedIn">
						<img src={linkedinIcon.src} alt="LinkedIn" class="social-icon" />
					</a>
					<a href="/rss.xml" class="social-link rss-link-text">RSS</a>
				</div>
			</nav>
		</div>
		<div class="hero-image">
			<a href="/">
				<img src="/photo.jpg" alt="Marc Grabanski" class="profile-photo" />
			</a>
		</div>
	</div>
</div> 