---
import { site } from "../data/siteMetaData.js";

const { author } = site;
const { name } = author;
---

<header class="compact-header">
	<div class="compact-header-content">
		<a href="/" class="compact-home-link">
			<img src="/photo.jpg" alt="Marc Grabanski" class="compact-avatar" />
			<div class="compact-identity">
				<h1 class="compact-name">
					<span class="highlight-compact">Marc Grabanski</span>
				</h1>
				<p class="compact-subtitle">Developer, Entrepreneur, Health Enthusiast</p>
			</div>
		</a>
		<nav class="compact-nav">
			<a href="/articles/1" class="compact-nav-link">Articles</a>
		</nav>
	</div>
</header>

<style>
	.compact-header {
		background: linear-gradient(
			135deg,
			var(--color-background) 0%,
			#2a1a0f 50%,
			#3a2a1a 100%
		);
		color: var(--color-white);
		padding: var(--space-sm) 0;
		position: sticky;
		top: 0;
		z-index: 100;
		position: relative;
		overflow: hidden;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.compact-header::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(
				circle at 20% 80%,
				rgba(224, 160, 128, 0.15) 0%,
				transparent 50%
			),
			radial-gradient(
				circle at 80% 20%,
				rgba(160, 96, 0, 0.12) 0%,
				transparent 50%
			),
			radial-gradient(
				circle at 40% 40%,
				rgba(224, 160, 128, 0.08) 0%,
				transparent 70%
			);
		pointer-events: none;
	}

	.compact-header-content {
		max-width: var(--layout-width-compact);
		margin: 0 auto;
		padding: 0 var(--space-lg);
		display: flex;
		justify-content: space-between;
		align-items: center;
		position: relative;
		z-index: 2;
	}

	.compact-home-link {
		display: flex;
		align-items: center;
		gap: var(--space-sm);
		text-decoration: none;
		color: inherit;
		transition: opacity 0.2s ease;
	}

	.compact-home-link:hover {
		opacity: 0.8;
	}

	.compact-avatar {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		object-fit: cover;
		border: 2px solid rgba(255, 255, 255, 0.2);
		flex-shrink: 0;
		transition: all 0.3s ease;
	}

	.compact-home-link:hover .compact-avatar {
		border-color: rgba(255, 255, 255, 0.4);
		transform: scale(1.05);
	}

	.compact-identity {
		display: flex;
		flex-direction: column;
		gap: 4px;
	}

	.compact-name {
		font-size: var(--font-size-h3);
		font-weight: 600;
		margin: 0;
		line-height: 1.2;
	}

	.highlight-compact {
		background: linear-gradient(
			135deg,
			var(--color-primary) 0%,
			var(--color-secondary) 50%,
			var(--color-primary) 100%
		);
		background-size: 200% 200%;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		position: relative;
	}

	.highlight-compact::after {
		content: "";
		position: absolute;
		bottom: -1px;
		left: 0;
		width: 100%;
		height: 1px;
		background: linear-gradient(
			90deg,
			var(--color-primary),
			var(--color-secondary)
		);
		transform: scaleX(1);
	}

	.compact-subtitle {
		font-size: var(--font-size-small);
		color: var(--color-white);
		opacity: 0.8;
		margin: 0;
		line-height: 1.2;
	}

	.compact-nav {
		display: flex;
		align-items: center;
	}

	.compact-nav-link {
		color: var(--color-white);
		text-decoration: none;
		font-weight: 500;
		font-size: var(--font-size-base);
		padding: var(--space-xs) var(--space-sm);
		border-radius: 8px;
		transition: all 0.3s ease;
		backdrop-filter: blur(10px);
		background: rgba(255, 255, 255, 0.1);
		border: 1px solid rgba(255, 255, 255, 0.2);
		position: relative;
		overflow: hidden;
		border-bottom: 1px solid transparent;
	}

	.compact-nav-link:hover {
		background: rgba(255, 255, 255, 0.2);
		border-color: rgba(255, 255, 255, 0.3);
		transform: translateY(-1px);
		color: var(--color-primary);
		border-bottom-color: var(--color-primary);
	}

	.compact-nav-link::after {
		content: "";
		position: absolute;
		bottom: -1px;
		left: 0;
		width: 100%;
		height: 2px;
		background: linear-gradient(
			90deg,
			var(--color-primary),
			var(--color-secondary)
		);
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.compact-nav-link:hover::after {
		transform: scaleX(1);
	}

	@media (max-width: 768px) {
		.compact-header-content {
			padding: 0 var(--space-md);
		}

		.compact-identity {
			gap: 3px;
		}

		.compact-name {
			font-size: var(--font-size-base);
		}

		.compact-subtitle {
			font-size: 0.75rem;
		}

		.compact-avatar {
			width: 50px;
			height: 50px;
		}
	}

	@media (max-width: 480px) {
		.compact-subtitle {
			display: none;
		}
	}
</style> 