---
import '../styles/global.css';
import { site } from "../data/siteMetaData.js";

export interface Props {
  frontmatter:  {pageTitle: string, description: string};
}

const { frontmatter } = Astro.props;
const { pageTitle, description } = frontmatter;
const { title } = site;
const { author } = site;
const { name } = author;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
    <title>{`${pageTitle} - ${title}`}</title>
    <meta name="description" content={description} />
	</head>
	<body>
    <header class="article-page-header">
      <div class="content-wrapper">
        <div class="article-header-brand">
          <a href="/" class="brand-link">
            <img src="/photo.jpg" alt="Marc Grabanski" class="brand-photo" />
            <div class="brand-text">
              <span class="brand-name">{name}</span>
              <span class="brand-subtitle">Developer, Entrepreneur, Health Enthusiast</span>
            </div>
          </a>
        </div>
        <nav class="article-navigation">
          <div class="nav-links">
            <a href="/articles/1">Articles</a>
          </div>
        </nav>
      </div>
    </header>
    <div class="content">
      <div class="content__inner">
        <div class="content-wrapper">
          <div class="page-single">
            <div class="page-single__inner">
              <header class="page-header">
                <h1 class="page-title">{pageTitle}</h1>
              </header>
              
              <div class="page-body">
                <slot />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
