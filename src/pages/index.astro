import Tag from '../components/Tag.astro';
import ArticleAbstract from '../components/ArticleAbstract.astro';
import githubIcon from '../../public/github.svg';
import linkedinIcon from '../../public/linkedin.svg';

const xIcon = `<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`;

const { author, menu } = site;
const { twitter, github, linkedin } = author;

// Get the health checklist article specifically
const allArticles = await getCollection('articles');
const recentArticles = allArticles.filter(article => article.slug !== 'personal-health-checklist').slice(-6).reverse();
