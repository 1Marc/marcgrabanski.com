---
import Layout from '../layouts/Layout.astro';
import RecentArticles from '../components/RecentArticles.astro';
import { Content as About } from '../components/About.mdx';
import { site } from "../data/siteMetaData.js";
import { getCollection } from 'astro:content';
import Tag from '../components/Tag.astro';
import Header from '../components/Header.astro';

// Map tag names to URL slugs
const tagMapping = {
  'Career Journal': 'career-journal',
  'Checklists & Guides': 'checklists-guides',
  'Lessons Learned': 'lessons-learned',
  'Opinion Pieces': 'opinion'
};

// Get the health checklist article specifically
const allArticles = await getCollection('articles');
const healthChecklist = allArticles.find(article => article.slug === 'personal-health-checklist');
const recentArticles = allArticles.filter(article => article.slug !== 'personal-health-checklist').slice(-6).reverse();
---

<Layout title={site.title}>
	<!-- Original Header Component -->
	<Header />

	<div class="content">
		<div class="content__inner">
			<div class="content-wrapper">

				<!-- Featured Health Section -->
				<section class="featured-section">
					<div class="featured-header">
						<h2 class="section-title">🔥 Featured: My Health Journey</h2>
					</div>
					
					<div class="featured-card">
						<div class="featured-banner">
							<div class="featured-main">
								<div class="featured-text">
									<h3 class="featured-title">
										<a href="/articles/personal-health-checklist" class="featured-link">
											My Personal Health Checklist
										</a>
									</h3>
									<p class="featured-description">
										Your go-to guide for building and maintaining healthy habits. This took years to put together and is updated as I learn more.
									</p>
									<div class="featured-highlights">
										<div class="highlight-item">
											<span class="highlight-icon">✅</span>
											<span class="highlight-text">50+ science-backed strategies</span>
										</div>
										<div class="highlight-item">
											<span class="highlight-icon">📈</span>
											<span class="highlight-text">Updated annually for 3+ years</span>
										</div>
										<div class="highlight-item">
											<span class="highlight-icon">🎯</span>
											<span class="highlight-text">100% actionable</span>
										</div>
									</div>
									<a href="/articles/personal-health-checklist" class="cta-button">
										<span class="button-text">Read the Health Checklist</span>
										<span class="button-arrow">→</span>
									</a>
								</div>
								<div class="featured-visual">
									<div class="health-icon">💪</div>
								</div>
							</div>
						</div>
					</div>
				</section>

				<!-- Performance Stats Section -->
				<section class="performance-section">
					<div class="performance-header">
						<div class="header-content">
							<h2 class="section-title">🏃‍♂️ Health & Performance</h2>
							<p class="section-subtitle">Living the practice, not just sharing advice</p>
						</div>
					</div>
					
					<div class="health-dashboard">
						<!-- Strength Row -->
						<div class="metric-row strength-row">
							<div class="row-header">
								<div class="header-icon">💪</div>
								<div class="header-content">
									<h3 class="row-title">Strength</h3>
									<div class="row-subtitle">Power & Performance</div>
								</div>
							</div>
							<div class="row-metrics">
								<div class="stat-item strength">
									<div class="stat-icon">🏋️</div>
									<div class="stat-content">
										<div class="stat-value">225 lbs</div>
										<div class="stat-label">Bench Press</div>
									</div>
								</div>
								<div class="stat-item strength">
									<div class="stat-icon">🏋️</div>
									<div class="stat-content">
										<div class="stat-value">300 lbs</div>
										<div class="stat-label">Squat</div>
									</div>
								</div>
								<div class="stat-item strength">
									<div class="stat-icon">🔥</div>
									<div class="stat-content">
										<div class="stat-value">335 lbs (2 reps)</div>
										<div class="stat-label">Deadlift</div>
									</div>
								</div>
								<div class="stat-item strength">
									<div class="stat-icon">🎯</div>
									<div class="stat-content">
										<div class="stat-value">20 in a row</div>
										<div class="stat-label">Pull-ups</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Cardio Row -->
						<div class="metric-row cardio-row">
							<div class="row-header">
								<div class="header-icon">❤️</div>
								<div class="header-content">
									<h3 class="row-title">Cardiovascular</h3>
									<div class="row-subtitle">Endurance & Heart Health</div>
								</div>
							</div>
							<div class="row-metrics">
								<div class="stat-item cardio">
									<div class="stat-icon">🏃‍♂️</div>
									<div class="stat-content">
										<div class="stat-value">1:51:50</div>
										<div class="stat-label">Half Marathon PR</div>
									</div>
								</div>
								<div class="stat-item cardio">
									<div class="stat-icon">❤️</div>
									<div class="stat-content">
										<div class="stat-value">49 bpm</div>
										<div class="stat-label">Resting HR</div>
									</div>
								</div>
								<div class="stat-item cardio">
									<div class="stat-icon">🫁</div>
									<div class="stat-content">
										<div class="stat-value">45</div>
										<div class="stat-label">VO2 Max</div>
									</div>
								</div>
								<div class="stat-item cardio">
									<div class="stat-icon">🔥</div>
									<div class="stat-content">
										<div class="stat-value">205</div>
										<div class="stat-label">Max HR</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Movement Row -->
						<div class="metric-row movement-row">
							<div class="row-header">
								<div class="header-icon">🏃‍♂️</div>
								<div class="header-content">
									<h3 class="row-title">Movement & Skills</h3>
									<div class="row-subtitle">Multi-Sport Athlete</div>
								</div>
							</div>
							<div class="row-metrics">
								<div class="stat-item movement">
									<div class="stat-icon">🤸‍♂️</div>
									<div class="stat-content">
										<div class="stat-value">Backflip</div>
										<div class="stat-label">Gymnastics</div>
									</div>
								</div>
								<div class="stat-item movement">
									<div class="stat-icon">🎾</div>
									<div class="stat-content">
										<div class="stat-value">Tennis</div>
										<div class="stat-label">Weekly Play</div>
									</div>
								</div>
								<div class="stat-item movement">
									<div class="stat-icon">💃</div>
									<div class="stat-content">
										<div class="stat-value">State Champion</div>
										<div class="stat-label">Adult Dance Team 2025</div>
									</div>
								</div>
								<div class="stat-item movement">
									<div class="stat-icon">🏃‍♂️</div>
									<div class="stat-content">
										<div class="stat-value">600 miles</div>
										<div class="stat-label">Annual Running</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Daily Health Row -->
						<div class="metric-row daily-row">
							<div class="row-header">
								<div class="header-icon">📊</div>
								<div class="header-content">
									<h3 class="row-title">Daily Health</h3>
									<div class="row-subtitle">Lifestyle & Wellness</div>
								</div>
							</div>
							<div class="row-metrics">
								<div class="stat-item daily">
									<div class="stat-icon">👣</div>
									<div class="stat-content">
										<div class="stat-value">13,732</div>
										<div class="stat-label">Daily Steps (2025)</div>
									</div>
								</div>
								<div class="stat-item daily">
									<div class="stat-icon">💤</div>
									<div class="stat-content">
										<div class="stat-value">7h 40m</div>
										<div class="stat-label">Avg Sleep</div>
									</div>
								</div>
								<div class="stat-item daily">
									<div class="stat-icon">📏</div>
									<div class="stat-content">
										<div class="stat-value">190 lbs</div>
										<div class="stat-label">5'10"</div>
									</div>
								</div>
								<div class="stat-item daily">
									<div class="stat-icon">📊</div>
									<div class="stat-content">
										<div class="stat-value">14%</div>
										<div class="stat-label">Body Fat</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>

				<!-- About Section -->
				<section class="about-section">
					<div class="featured-header">
						<h2 class="section-title">📘 About Me</h2>
					</div>
					
					<div class="about-body">
						<p>I founded Frontend Masters in 2014 and have grown it to over 10,000 paying customers from leading companies around the world, while keeping the company fully bootstrapped and independent.</p>
						
						<p>Before that, I consulted for Fortune 100 companies, launched conferences, created popular open source tools like the jQuery UI Datepicker, and spoke at more than 60 events globally. Today, I focus on helping developers go deep, stay sharp, and live well.</p>
						
						<h3>My current work includes:</h3>
						<ul>
							<li><strong>Hosting The Frontend Masters Podcast</strong> — conversations with top instructors</li>
							<li><strong>Writing in my Career Journal</strong> — a behind-the-scenes look at leadership, business, and growth</li>
							<li><strong>Sharing lessons on health, performance, and sustainable success</strong></li>
						</ul>

						<h3>🎙️ Featured Work</h3>
						<div class="work-grid">
							<div class="work-card">
								<div class="work-icon">🧠</div>
								<div class="work-text">
									<span class="work-title">Learning Paths & Deep Dives</span>
									<span class="work-separator">: </span>
									<span class="work-description">Frontend Masters</span>
								</div>
							</div>
							<div class="work-card">
								<div class="work-icon">📝</div>
								<div class="work-text">
									<span class="work-title">Writer</span>
									<span class="work-separator">: </span>
									<span class="work-description">Newsletter to 500k+ developers monthly</span>
								</div>
							</div>
							<div class="work-card">
								<div class="work-icon">🧰</div>
								<div class="work-text">
									<span class="work-title">Creator</span>
									<span class="work-separator">: </span>
									<span class="work-description">jQuery UI Datepicker, Modern Vanilla JS TodoMVC</span>
								</div>
							</div>
							<div class="work-card">
								<div class="work-icon">🎧</div>
								<div class="work-text">
									<span class="work-title">Podcast Host</span>
									<span class="work-separator">: </span>
									<span class="work-description">Frontend Masters Podcast</span>
								</div>
							</div>
							<div class="work-card">
								<div class="work-icon">🗣️</div>
								<div class="work-text">
									<span class="work-title">Speaker</span>
									<span class="work-separator">: </span>
									<span class="work-description">60+ conferences including Google HQ & international audiences</span>
								</div>
							</div>
						</div>
					</div>
				</section>

				<!-- Latest Articles Section -->
				<section class="recent-section">
					<div class="recent-header">
						<h2 class="section-title">📰 Latest Articles</h2>
						<a href="/articles/1" class="view-all-link">View all articles →</a>
					</div>
					<div class="articles-grid">
						{recentArticles.map(article => (
							<article class="article-card">
								<div class="article-meta">
									<time class="article-date">{new Date(article.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</time>
									<div class="article-tags">
										{article.data.tags?.slice(0, 2).map(tag => {
											const tagSlug = tagMapping[tag];
											return tagSlug ? (
												<Tag tag={tag} href={`/tags/${tagSlug}`} variant="default" size="small" />
											) : (
												<Tag tag={tag} variant="default" size="small" />
											);
										})}
									</div>
								</div>
								<h3 class="article-title">
									<a href={`/articles/${article.slug}`} class="article-link">
										{article.data.postTitle}
									</a>
								</h3>
								<p class="article-excerpt">{article.data.description}</p>
							</article>
						))}
					</div>
				</section>

				<!-- Browse by Topic Section -->
				<section class="tags-section">
					<div class="section-header">
						<div class="header-content">
							<h2 class="section-title">📂 Browse by Topic</h2>
							<p class="section-subtitle">Explore content by category</p>
						</div>
					</div>
					<div class="tags-grid">
						<a href="/tags/career-journal" class="tag-card">
							<div class="tag-icon">💼</div>
							<div class="tag-content">
								<h3>Career Journal</h3>
								<p>Reflections on business, leadership, and personal growth</p>
							</div>
						</a>
						<a href="/tags/checklists-guides" class="tag-card">
							<div class="tag-icon">✅</div>
							<div class="tag-content">
								<h3>Checklists & Guides</h3>
								<p>Frameworks I use personally and professionally</p>
							</div>
						</a>
						<a href="/tags/opinion" class="tag-card">
							<div class="tag-icon">💭</div>
							<div class="tag-content">
								<h3>Opinion Pieces</h3>
								<p>Takes on tech, life, and building thoughtfully</p>
							</div>
						</a>
						<a href="/tags/lessons-learned" class="tag-card">
							<div class="tag-icon">🎓</div>
							<div class="tag-content">
								<h3>Lessons Learned</h3>
								<p>Insights gained the hard way</p>
							</div>
						</a>
					</div>
				</section>

				<!-- Connect Section -->
				<section class="connect-section">
					<div class="section-header">
						<div class="header-content">
							<h2 class="section-title">🤝 Connect with Me</h2>
							<p class="section-subtitle">Let's build something together</p>
						</div>
					</div>
					<div class="connect-grid">
						<a href="https://twitter.com/1marc" class="connect-card">
							<div class="connect-icon">🐦</div>
							<div class="connect-content">
								<h3>Twitter / X</h3>
								<p>Personal updates & thoughts</p>
							</div>
						</a>
						<a href="https://linkedin.com/in/marcgrabanski" class="connect-card">
							<div class="connect-icon">💼</div>
							<div class="connect-content">
								<h3>LinkedIn</h3>
								<p>Career & professional</p>
							</div>
						</a>
						<a href="https://github.com/1Marc" class="connect-card">
							<div class="connect-icon">💻</div>
							<div class="connect-content">
								<h3>GitHub</h3>
								<p>Open source contributions</p>
							</div>
						</a>
						<a href="/podcasts" class="connect-card">
							<div class="connect-icon">📡</div>
							<div class="connect-content">
								<h3>Podcasts & Interviews</h3>
								<p>Guest appearances and past interviews</p>
							</div>
						</a>
					</div>
				</section>

				<!-- Testimonials Section -->
				<section class="testimonials-section">
					<div class="testimonials-header">
						<h2 class="section-title">📣 Praise from Others</h2>
						<a href="https://www.linkedin.com/in/1marc/" target="_blank" class="view-all-link">View Full Testimonials →</a>
					</div>
					<div class="testimonials-list">
						<blockquote class="testimonial-quote">
							Marc is an incredible visionary who constantly surprises me with his ability to create awesome new things, educate and grow those around him, and bring more to his projects than anyone expects.
							<footer class="testimonial-author">
								<strong>Tanner Thompson</strong>
								<span>Chief Product Officer</span>
							</footer>
						</blockquote>
						<blockquote class="testimonial-quote">
							Marc's understanding of client-side development runs deep and he was more than happy to share his knowledge with the broader team — we all learned a lot from him.
							<footer class="testimonial-author">
								<strong>Brian Shoemaker</strong>
								<span>Senior Director of Innovation, Life Time</span>
							</footer>
						</blockquote>
						<blockquote class="testimonial-quote">
							He's one of the most dedicated, skilled, and inspiring developers I've ever worked with.
							<footer class="testimonial-author">
								<strong>Renee Gustafson</strong>
								<span>Group Program Director, Horizontal Digital</span>
							</footer>
						</blockquote>
					</div>
				</section>

				<!-- Summary Section -->
				<section class="summary-section">
					<div class="summary-content">
						<p class="summary-text">
							As a founder and developer, I focus on meaningful work that improves both technical ability and personal well-being.
						</p>
					</div>
				</section>

			</div>
		</div>
	</div>
</Layout>




